<main class="container">
<!-- SECTION RECENTLY PRODUCTS -->
<div class="product-recently my-5">
  <h3 class="pb-2 mb-4 fst-italic" style='border-bottom: 4px solid #08a6c6'>
    Product recently
  </h3>

  <div class="row g-3">
    <% @products.take(6).each do |p|  %>
      <div class="col-md-2">
        <div class="card p-3 text-center">
          <%= link_to image_tag("product#{rand(2...4)}.jpeg", alt:"", width:"170px"),"#"   %>
          <p class="h5 pt-2"><%= p.name %> </p>
        </div>
      </div>
    <% end %>
    
  </div>
</div>
<!-- / SECTION RECENTLY PRODUCTS -->
  <div class="row g-5">
    <div class="col-md-10">
      <!-- Products -->
      <div class="row g-3">
        <%= render partial: 'product', as: :p, collection: @products %>
        <%= paginate @products, window: 3 %>
      </div>
      <!-- / Products -->

    </div>
    <!-- Side bar category section -->
    <div class="col-md-2">
      <div class="position-sticky pt-3">
        <ul class="nav flex-column">
          <% @categories.each do |c| %>
            <li class="nav-item">
              <a class="nav-link active" aria-current="page" href="#">
                <%= c.name %>
              </a>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
    <!-- /Side bar category section -->
  </div>
