<% provide(:title, 'Update Profile') %>

<section class="text-center d-flex justify-content-center container">
  <div class="mt-2">
    <h5> Update my profile </h5>
    <%= form_with model: @user, url: home_path, method: :put do |f| %>
    <p> Name: <%=f.text_field :name %></p>
    <p> Phone: <%=f.text_field :phone %></p>
    <p>
      <%= f.label :gender %> <br />
      <%= f.label :gender, 'male' %>
      <%= f.radio_button :gender, 1 %>
      <%= f.label :gender, 'female' %>
      <%= f.radio_button :gender, 0 %><br />
    </p >
    <p> Address: <%=f.text_field :address %></p>
    <p class="d-flex"> 
      Birthday: <%= f.date_field :birthday, autofocus: true, autocomplete: 'birthday', class: 'form-control' %>
    </p>
    <div class='flex'>
      <%= f.submit 'Update', class:"btn btn-dark d-block mx-auto btn-submit", data: { disable_with: 'Update' } %>
      <%= link_to "Back", home_path(current_user.id) %>
    </div>


    <% end  %>
  </div>


</section>