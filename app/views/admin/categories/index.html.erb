<% provide(:title, 'Categories') %>
<div class="container-fluid">
  <div class="row">
    <%# --Sidebar %>
    <%= render partial:'admin/home/side_bar' %>
    <%# --Sidebar %>

    <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
      <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
      
        <h1 class="h2">Categories</h1>
        <div class= 'd-flex'>
        <%= search_form_for @q ,url: admin_categories_path, class: "" do |f| %>
          <%= f.search_field :position_or_name_cont, class:"form-control rounded-2 border-1", placeholder:"Search...", aria_label:"Search"  %> 
        <% end %> 
        <%= link_to 'Add Category',new_admin_category_path, class:'btn btn-dark ms-1' %>

        <%# <input class="form-control w-25 rounded-2 border-1" type="text" placeholder="Search" aria-label="Search"> %>

        </div>
      </div>

      <div class="table-responsive">
        <table class="table table-striped table-sm">
          <thead>
            <tr>
              <th scope="col"><%= sort_link(@q, :id, default_order: :asc) do %>
              <strong>ID</strong>
              <%end %>
              </th>
              <th scope="col"><%= sort_link(@q, :name, default_order: :asc) %></th>
              <th scope="col"><%= sort_link(@q, :position, default_order: :asc) %></th>
              <th scope="col">Delete</th>
              <th scope="col">Update</th>
            </tr>
          </thead>

          <%#  --Main %>
          <%= render partial:'admin/categories/category', collection: @categories %>

          <%#  --Main %>
        </table>
        <%= paginate @categories, window: 3 %>

      </div>
    </main>
  </div>
</div>