<% provide(:title, 'Update User') %>
<div class="container-fluid">
  <div class="row">
    <%# --Sidebar %>
    <%= render partial:'admin/home/side_bar' %>
    <%# --Sidebar %>

    <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
      <div class="pt-3 pb-2 mb-3 border-bottom">
        <h1 class="h2">Customers Update</h1>
      </div>

      <div class="table-responsive">
        <section class="text-left d-flex justify-content-start">
          <div class="mt-2">
            <h5> Update my profile </h5>
            <%= form_with model: @category, url: admin_category_path, method: :put do |f| %>

              <div class="mb-3 row">
                <label  class="col-sm-2 col-form-label">Name</label>
                <div class="col-sm-10">
                  <%=f.text_field :name , value: @category.name, class:'form-control', placeholder:"category name", type:"text"  %>
                  <p class="text-danger"><%= @errors.messages[:name].first if @errors.present? %></p>
                </div>
              </div>

              <div class="mb-3 row">
                <label  class="col-sm-2 col-form-label">Position</label>
                <div class="col-sm-10">
                  <%=f.number_field :position, in: 0..Category.count, step:1, class:'form-control', placeholder:"category position", type:"text"  %>
                  <p class="text-danger"><%= @errors.messages[:position].first if @errors.present? %></p>
                </div>
              </div>
              
              <div class='d-flex'>
                <%= f.submit 'Update', class:"btn btn-dark d-block btn-submit", data: { disable_with: 'Update' } %>
                <%= link_to "Back", admin_categories_path, class:'ms-2 btn btn-link d-block'%>
              </div>
            <% end  %>
          </div>
        </section>
      </div>
    </main>
  </div>
</div>