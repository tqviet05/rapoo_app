<% provide(:title, 'Update User') %>
<div class="container-fluid">
  <div class="row">
    <%# --Sidebar %>
    <%= render partial:'admin/home/side_bar' %>
    <%# --Sidebar %>

    <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
  <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
  
    <h1 class="h2">Customers Update</h1>
    <div class= 'd-flex'>
   
    </div>
  </div>

  <div class="table-responsive">

    <section class="text-center d-flex justify-content-center container">
      <div class="mt-2">
        <h5> Update my profile </h5>
        <%= form_with model: @order, url: admin_order_path, method: :put do |f| %>
        <p> Name: <%=f.text_field :name %></p>
        <p> Phone: <%=f.text_field :phone %></p>
        <p> Address: <%=f.text_field :address %></p>
        <div class='flex'>
          <%= f.submit 'Update', class:"btn btn-dark d-block mx-auto btn-submit", data: { disable_with: 'Update' } %>
          <%= link_to "Back", admin_orders_path %>
        </div>


        <% end  %>
      </div>
    </section>

  </div>
</main>

  </div>
</div>