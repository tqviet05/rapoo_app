<!DOCTYPE html>
<html>
  <head>
    <title><%= full_title(yield(:title))%></title>
    <%= render 'layouts/admin/rails_default'  %>
  </head>

  <body>
    <%= render 'layouts/admin/header'  %>
    <div class="container">
      <% if notice %>
          <p class="notice text-success"><%= notice %></p>
      <% end %>

      <% if alert %>
        <p class="alert text-danger"><%= alert %></p>
      <% end %>
    </div>

    <%= yield %>

  </body>
</html>
