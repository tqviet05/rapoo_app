<% provide(:title, 'Order') %>
<section class="h-100 h-custom" style="background-color: #eee;">
  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col">
        <div class="card">
          <div class="card-body p-4">

            <div class="row">
              <%# List product items %>
                <h5 class="mb-3">
                  <%= link_to cart_index_path,class: 'text-body' do %>
                    <i class="fas fa-long-arrow-alt-left me-2"></i>
                    Back to Cart
                  <% end %>
                </h5>
                <hr>
              <div class="col-lg-6">
               <%= render partial:'order/deliveries/deliveries', locals: {deliveries: @deliveries, deliveries_form: @deliveries_form} %>
              </div>
              <div class="col-lg-6">

                <div class="d-flex justify-content-between align-items-center ">
                  <div>
                    <p class="mb-1">Shopping orders</p>
                  </div>
                  <div>
                    <p class="mb-0">You have <%=  @cart_items.count %> items in your cart</p>
                  </div>
                </div>

                <div class=" mb-3">
                  
                  <div class="card-body">

                    <div class="d-flex justify-content-between mt-2">
                      <h5 class="mb-2 ms-4 fw-bold">TOTAL AMOUNT</h5>
                      <div style="width: 200px;">
                        <h5 class="mb-2 me-2 fw-bold text-end">
                          <%=number_with_delimiter(@total.to_i, delimiter: '.') %> VND
                        </h5>
                      </div>
                    </div>
                  </div>
                </div>
                <hr>
                
                <%= render partial:'order_item', collection: @cart_items, as: :item %>
                <hr>

              </div>
            </div>

          </div>
        </div>
      </div>
    </div>
  </div>
</section>