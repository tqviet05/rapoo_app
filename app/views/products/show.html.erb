<div class="container">
  <nav aria-label="breadcrumb">
    <ol class="breadcrumb">
      <li class="breadcrumb-item"><a href="#">Rapoo</a></li>
      <li class="breadcrumb-item"><a href="#">Phụ kiện máy tính</a></li>
      <li class="breadcrumb-item active" aria-current="page">Bàn phím</li>
    </ol>
  </nav>
  <!-- /breadcrump -->
  <div class="row g-3">
      <%= render 'images_product' %>
    <!-- Detail prices -->
    <div class="col-md-8">
      <p class="h2 pt-2">
        <%= @product.name %>
      </p>
      <p class="h1 ">
        Giá tiền: 
        <span style='color:#c60808'>
          <%= number_with_delimiter(@product.price.to_i, delimiter: '.')  %>
        </span> VNĐ 
      </p>
      <p class="h3 ">Tình trạng: Còn hàng </p>
        <%= form_for @cart_item do |f| %>
        <%= hidden_field_tag :pid, @product.id %>
      <p class="h3 ">
        Số lượng: 
        <span style='color:#0844c6'>
          <%= f.number_field(:quantity, min: 1, step: 1, style:"width: 70px;", value: @cart_item.quantity) %>
        </span> 
      </p>
      <div class='d-inline mb-2'>
        <%= f.submit('Thêm vào giỏ', class:'btn btn-outline-info btn-lg') %>
        <% end %>
        <button type="button" class="btn btn-info btn-lg ms-2">MUA NGAY</button>
      </div>

      <p class="h3 my-2">Gọi điện để được tư vấn: <span style='color:#c60808'>02363.123.456</span> </p>

      <div class="container d-flex justify-content-around align-items-center py-2"
        style='border-top: 4px solid #08a6c6;'>
        <div class='d-flex align-items-center'>
          <i class="fa-solid fa-arrow-rotate-left" style="font-size: 50px;color: #08a6c6;"></i>
          <div>7 days free returns</div>
        </div>
        <div class='d-flex align-items-center'>
          <i class="fa-solid fa-truck-arrow-right" style="font-size: 50px;color: #08a6c6;"></i>
          <div>
            100% branch new
          </div>
        </div>
        <div class='d-flex align-items-center'>
          <i class="fa-solid fa-plane-circle-check" style="font-size: 50px;color: #08a6c6;"></i>
          <div>
            Free shipping
          </div>
        </div>
      </div>
      
    </div>

    <!-- /Detail prices -->
  </div>
    <!-- Detail datasheet -->
  <nav class="mt-3">
    <div class="nav nav-tabs" id="nav-tab" role="tablist">
      <button class="nav-link active" id="nav-home-tab" data-bs-toggle="tab" data-bs-target="#nav-home" 
              type="button" role="tab" aria-controls="nav-home" aria-selected="true">
        Mô tả sản phẩm
      </button>
      <button class="nav-link" id="nav-profile-tab" data-bs-toggle="tab" data-bs-target="#nav-profile" 
              type="button" role="tab" aria-controls="nav-profile" aria-selected="false">
        Thông số kỹ thuật
      </button>
    </div>
  </nav>
  <div class="tab-content" id="nav-tabContent">
    <%= render 'description' %>
    <%= render partial:'datasheet' %>
  </div>
    <!-- /Detail datasheet -->

</div>